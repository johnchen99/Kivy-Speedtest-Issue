#:kivy 2.0.0

<SpeedTest_Screen>:

    ret_speedtest: ret_speedtest
    req_button: req_button
    loading_button: loading_button
    # tcp_button: tcp_button

    FloatLayout:
        BoxLayout:
            MDLabel:
                text: "Client"+"\n\nHost"+"\n\nDownload"+"\n\nUpload"
                halign: "right"
            MDLabel:
                text: ":"+"\n\n:"+"\n\n:"+"\n\n:"
                halign: "center"
            MDLabel:
                id: ret_speedtest
                text: "N/A"+"\n\nN/A"+"\n\nN/A"+"\n\nN/A"
                halign: "left"

        MDFillRoundFlatButton:
            id: req_button
            text: "Run"
            size_hint: .3,.1
            pos_hint: {"top":.3,"center_x":.5}
            on_release: 
                root.getSpeedTest()

        # MDFillRoundFlatButton:
        #     id: tcp_button
        #     text: "Port forward check"
        #     size_hint: .3,.1
        #     pos_hint: {"top":.15,"center_x":.5}
        #     on_release: 

                
        MDLabel:
            id: ret_pf
            text: "N/A"
       
                
        MDSpinner:
            id: loading_button
            size_hint: .1,.1
            pos_hint: {"top":.6,"center_x":.5}
            active: False
        




                    

